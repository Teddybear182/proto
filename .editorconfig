root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

# K&R style braces
csharp_new_line_before_open_brace = none
csharp_new_line_before_else = false
csharp_new_line_before_catch = false
csharp_new_line_before_finally = false

# Spaces
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_after_cast = true

# Make code more compact - no unnecessary empty lines
resharper_csharp_blank_lines_inside_type = 0
resharper_csharp_blank_lines_inside_namespace = 0
resharper_csharp_blank_lines_inside_region = 0

# Prefer 'var's over explicit types
dotnet_style_var_for_built_in_types = true:suggestion
dotnet_style_var_when_type_is_apparent = true:suggestion
dotnet_style_var_elsewhere = true:suggestion

# Disabling useless errors
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1500.severity = none
dotnet_diagnostic.SA1516.severity = none
dotnet_diagnostic.SA1505.severity = none
dotnet_diagnostic.SA1508.severity = none